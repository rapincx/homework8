@media screen and (min-width : 320px)
  section#showcase
    background : #f6f9f9;
    padding-top : 81px;
    h2
      margin-bottom : 22px;
    .header-desc
      color : #909090;
      font-family : 400 15px "Lato";

  .showcase-list
    background : #f6f9f9;
    padding : 80px 0 116px 0;

  .showcase-item
    position : relative;
    min-width : 360px;
    min-height : 260px;
    margin-bottom : 30px;
    overflow : hidden;
    text-align : center;
    img
      width : 100%;
      vertical-align : top;
    .overlay
      position : absolute;
      width : 100%;
      height : 100%;
      top : 0;
      left : 0;
      background : rgba(21, 164, 250, 0.9);
      opacity : 0;
      transition : all 1s;
      -webkit-transition : all 1s;
      a
        display : inline-block;
        border : 1px solid white;
        text-align : center;
        border-radius : 2px;
        z-index : 1000;
        width : 42px;
        height 42px;
        &:first-child
          margin-right : 10px;
        i.fa
          color : white;
          font : 400 15px / 42px "FontAwesome";
    &:hover .overlay
      opacity : 1;